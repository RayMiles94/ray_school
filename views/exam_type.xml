<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="ray_school_examtype_tree" model="ir.ui.view">
            <field name="name">ray.school.examtype.tree</field>
            <field name="model">ray.school.examtype</field>
            <field name="arch" type="xml">
                <tree string="Exam type">
                    <field name="name"/>
                    <field name="desc"/>
                </tree>
            </field>
        </record>

        <record id="ray_school_examtype_form" model="ir.ui.view">
            <field name="name">ray.school.examtype.form</field>
            <field name="model">ray.school.examtype</field>
            <field name="arch" type="xml">
                <form string="Exam type">
                    <sheet>
                        <group>
                            <group>
                                <field name="name"/>
                                <field name="desc"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="ray_school_examtype_action" model="ir.actions.act_window">
            <field name="name">Exam type</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">ray.school.examtype</field>
            <field name="view_mode">tree,form</field>
        </record>


    </data>
</odoo>