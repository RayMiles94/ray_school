<odoo>
  <data>

    <record id="school_school_form" model="ir.ui.view">
      <field name="name">school.school.form</field>
      <field name="model">school.school</field>
      <field name="arch" type="xml">
        <form string="school">
          <sheet>
            <group>
              <field name="name"/>
              <field name="adresse"/>
            </group>
          </sheet>
        </form>
      </field>
    </record>

    <record id="school_school_tree" model="ir.ui.view">
      <field name="name">school.school.tree</field>
      <field name="model">school.school</field>
      <field name="arch" type="xml">
        <tree string="school.school">
          <field name="name"/>
          <field name="adresse"/>
        </tree>
      </field>
    </record>
  </data>

  <record id="school_school_action" model="ir.actions.act_window">
      <field name="name">school.school.action</field>
      <field name="type">ir.actions.act_window</field>
      <field name="res_model">school.school</field>
      <field name="view_mode">tree,form</field>
      <field name="help" type="html">
        <p class="oe_view_nocontent_create">
          <!-- Add Text Here -->
        </p><p>
          <!-- More details about what a user can do with this object will be OK -->
        </p>
      </field>
  </record>


  <menuitem id="school_school_root_menu" name="Schoool" sequence="20"/>
  <!-- This Menu Item must have a parent and an action -->
  <menuitem id="school_school_1" name="School" parent="school_school_root_menu" action="school_school_action" sequence="1"/>


</odoo>